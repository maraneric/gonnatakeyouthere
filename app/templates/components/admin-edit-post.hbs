<div class="row">
    {{md-input value=post.title label="Title" class="col s12" errors=errors.name}}
</div>
<div class="row">
    {{md-input-date label="Date" value=post.timestamp class="col s12"}}
</div>
<div class="row">
    {{md-textarea label="Content" value=body.content class="col s12"}}
</div>
{{md-check name="Publish the post?" checked=post.isPublished}}
<div class="row right-align">
    {{#unless isNew}}
        {{md-btn text="Delete"action="delete" class="red"}}
    {{/unless}}
    {{md-btn text="Cancel"action="cancel" class="grey darken-4"}}
    {{md-btn text="Save"action="save" class="deep-purple accent-2"}}
</div>
